#include <ctime>
#include <string>
#include <fstream>
#include <iostream>

using namespace std;

class PasswordGenerator
{
private:
    string pass;
    int length;
    int number;

public:
    PasswordGenerator();//конструктор по умолчанию
    void setLength(int length);
    void setNumber(int p_number);
    string getPassword(int length);//возвращает пароль длинной length
    void   getPassword();//перегруженный метод
    void entry();//ввод значений
};

PasswordGenerator::PasswordGenerator()
{
    srand(time(0));//установка начального значения генератора случайных чисел
}

void PasswordGenerator::setLength(int p_length)
{
    length = p_length;
}

void PasswordGenerator::setNumber(int p_number)
{
    number = p_number;
}

string PasswordGenerator::getPassword(int length)
{
    string password = "";
    for (int i = 0; i < length; i++)
        password += char('0' + rand() % ('z' - '0'));
    return password;
}

void PasswordGenerator::getPassword()
{
    string password;
    for (int k = 0; k < number; k++)
    {
        password = getPassword(length);//генерация пароля  
    }
}

void PasswordGenerator::entry()
{
    cout << "Введите длину пароля: ";
    cin >> length;
    cout << "Введите кол-во паролей: ";
    cin >> number;
}

int main()
{
    setlocale(LC_ALL, "Russian");
    PasswordGenerator pPassword;
    pPassword.entry();
    pPassword.getPassword();
    return 0;
}
